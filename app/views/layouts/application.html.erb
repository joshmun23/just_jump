<!DOCTYPE html>
<html>
<head>
  <title>LetsMeat</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>

</head>
<body>

  <div class="navbar-container">
    <ul class="nav-links-right">
      <li class="nav-link">
        <a href="/" class="first-link" ><h4>Home</h4></a>
      </li>
<!--       <li class="nav-link">
        <a href="/auth/github" class="second-link" ><h4>Sign in with Github</h4></a>
      </li> -->
        <li class="nav-link">
          <a href="https://www.facebook.com/dialog/oauth?
    client_id=1560786344203181
   &redirect_uri= https://www.facebook.com/connect/login_success.html" class="fb-link" ><h4>Login with Facebook!</h4></a>
        </li>
      <li class="nav-link">
        <a href="/users/login" class="login-link" ><h4>Login</h4></a>
      </li>
    </ul>
  </div>

  <%= yield %>

  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId      : '1560786344203181',
        xfbml      : true,
        version    : 'v2.2'
      });
    };

    (function(d, s, id){
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       js = d.createElement(s); js.id = id;
       js.src = "//connect.facebook.net/en_US/sdk.js";
       fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'facebook-jssdk'));
  </script>

</body>
</html>
