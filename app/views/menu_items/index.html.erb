<% i = 0 %>
<% @user_menu_items.each do |info| %>
  <% if i == 0 %>
    <div class='user-items-row small-12 large-12 columns'>
  <% end %>

      <div class='user-items-container small-4 large-4 columns'>
        <div class='user-items-content-top'>
          <ul>
            <li>
              <span class='user-items-names'><%= info.menu_item.restaurant.name %></span>
              $<span class='user-items-price'><%= info.menu_item.price %></span>
            </li>
          </ul>
        </div>

        <div class='user-items-content-middle'>
          <ul>
            <li>How You Like Them Apples?</li>
          </ul>
        </div>

        <div class='user-items-content-bottom'>
          <ul>
            <li class='user-items-names'><%= info.menu_item.menu_item %></li>
          </ul>
        </div>
      </div>
  <% i += 1 %>

  <% if i == 3 %>
    </div>
    <% i = 0 %>
  <% end %>

<% end %>

<%= paginate @user_menu_items %>
