<div class="row large-4 columns">
  <% if @restaurant_data %>
    <ul>
      <li><img src="http://uncletonysnypizza.com/wp-content/uploads/2012/10/pep_pizza_BIG.jpg"></li>
    <ul>
  <% end %>
</div>

<div class="row large-4 columns">
  <% if @restaurant_data %>
      <ul class="accordion" data-accordion>
        <% @restaurant_data.each_with_index do |restaurant, index| %>

          <% if index == 0 %>

            <li class="accordion-navigation">
              <a href="#panel<%= index %>a"><%= "#{restaurant[:restaurant].name}: #{restaurant[:menu_item].menu_item}
                                                | #{restaurant[:menu_item].price}" %></a>

              <div id="panel<%= index %>a" class="content active">
                <span class="menu_item"><%= restaurant[:address] %></span>
              </div>
            </li>

          <% else %>

            <li class="accordion-navigation">
              <a href="#panel<%= index %>a"><%= "#{restaurant[:restaurant].name}: #{restaurant[:menu_item].menu_item}
                                                | #{restaurant[:menu_item].price}" %></a>
              <div id="panel<%= index %>a" class="content">
                <span class="menu_item"><%= restaurant[:address] %></span>
              </div>
            </li>

          <% end %>


      <% end %>
      </ul>
  <% end %>
</div>

<div class="row large-4 columns">
  <% if @restaurant_data %>
    <h3><%= @food_search_string %></h3></br></br>
    <em><h3>Other Popular Searches in the area include:</h3></em>

    <ul>
      <% @most_popular_searches.each do |search| %>
        <li class="popular-searches"><h4><%= "#{search.search_term}: #{search.total_search_count}" %></h4></li>
      <% end %>
    </ul>
  <% end %>
</div>
