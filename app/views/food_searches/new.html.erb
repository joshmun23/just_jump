<div class="new-row-container top-row small-12 columns">
  <div class="top-row upper-row-container">
    <ul>
      <li class="has-form">
        <div class="row collapse">
            <%= form_for @spot, url: url_for(controller: 'food_searches', action: 'create') do |f| %>

              <div class="large-6 small-6 columns">
                <%= f.text_field :search_term, class: 'form-control', autofocus: true, placeholder: "What're you craving today?" %>
              </div>
              <div class="large-6 small-6 columns">
                <%= f.text_field :search_location, class: 'form-control', autofocus: true, placeholder: 'And where are you?' %>
              </div>
              <div class="large-12 small-12 columns">
                <%= f.submit "Feed Your Need", class: 'button small alert' %>
              </div>
            <% end %>
        </div>
      </li>
    </ul>
  </div>

  <div class="top-row bottom-container">
    <h3>Trending Searches in Boston:</h3>

    <div class="trend-carousel">
        <% @trends.each do |trend| %>
        <div>
          <ul>
            <li>
                <%= trend.search_term %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="new-row-container middle-row small-12 columns">

</div>
